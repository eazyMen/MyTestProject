<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTestApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="screenBackground">@color/white</item>
        <item name="imageViewBackgroundColor">#DCDCDC</item>
        <item name="progressBarColor">@color/black</item>
        <item name="textColor">@color/black</item>
        <item name="buttonColor">@color/black</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="iconsColor">@color/white</item>
        <item name="glideLoadErrorIconColor">@color/black</item>
        <item name="icSearchColor">@color/black</item>
        <item name="strokeColorForColorFilter">@color/black</item>
    </style>

    <attr name="screenBackground" format="color|reference" />
    <attr name="imageViewBackgroundColor" format="color|reference" />
    <attr name="progressBarColor" format="color|reference" />
    <attr name="textColor" format="color|reference"/>
    <attr name="buttonColor" format="color|reference"/>
    <attr name="buttonTextColor" format="color|reference"/>
    <attr name="iconsColor" format="color|reference"/>
    <attr name="glideLoadErrorIconColor" format="color|reference"/>
    <attr name="icSearchColor" format="color|reference"/>
    <attr name="strokeColorForColorFilter" format="color|reference"/>
</resources>